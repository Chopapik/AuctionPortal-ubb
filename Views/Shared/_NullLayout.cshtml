<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - auction_portal_ubb</title>
    <script type="importmap"></script>
    <link rel="icon" href="~/images/ico.svg" />
    <link rel="stylesheet" href="~/css/output.css" />
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/auction_portal_ubb.styles.css" asp-append-version="true" /> *@
</head>

<body>
    <div class="min-w-screen min-h-screen flex flex-col bg-[#FAF9F9]">
        <main role="main" class="w-full flex flex-col items-center flex-grow ">
            @RenderBody()
        </main>
        <footer
            class="h-[83px] w-full bg-black flex items-center justify-end pr-[10vw] bg-gradient-to-r from-[#1A1445] to-black">
            <img src="~/images/logo.svg" alt="TOSKLEP" height="39px" width="149px">
        </footer>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
