@{
    Layout = "~/Views/Shared/_NullLayout.cshtml";
    ViewData["Title"] = "Rejestracja";
}

<div class="py-[128px]">
    <form method="post" asp-action="Register" class="flex flex-col gap-16 items-center bg-black p-12 rounded-3xl">
        <span class="text-4xl text-white font-poppins font-bold">Rejestracja</span>

        <div class="flex flex-col items-center font-iter">
            <!-- Email input -->
            <div class="form-group relative">
                <label for="Email">Email</label>
                <div class="form-input">
                    <div class="flex w-full">
                        <input type="email" id="Email" name="Email" placeholder="example@domain.com"
                            class="flex-grow px-4 outline-none" />
                    </div>
                    <span class="absolute right-1 -bottom-2 text-red-600 font-inter text-xs"></span>
                </div>
            </div>

            <!-- Password input -->
            <div class="form-group relative">
                <label for="Password">Hasło</label>
                <div class="form-input">
                    <div class="flex w-full">
                        <input type="password" id="Password" name="Password" placeholder="●●●●●●"
                            class="flex-grow px-4 outline-none" />
                        <button class="w-8 h-8 flex-shrink-0">
                            <img src="~/images/icons/eyeIcon.svg" alt="pokaż">
                        </button>
                    </div>
                    <span class="absolute right-1 -bottom-2 text-red-600 font-inter text-xs"></span>
                </div>
            </div>

            <!-- Confirm password input -->
            <div class="form-group relative">
                <label for="ConfirmPassword">Powtórz hasło</label>
                <div class="form-input">
                    <div class="flex w-full">
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword" placeholder="●●●●●●"
                            class="flex-grow px-4 outline-none" />
                        <button class="w-8 h-8 flex-shrink-0">
                            <img src="~/images/icons/eyeIcon.svg" alt="pokaż">
                        </button>
                    </div>
                    <span class="absolute right-1 -bottom-2 text-red-600 font-inter text-xs"></span>
                </div>
            </div>

            <!-- Terms and conditions checkbox -->
            <div class="mt-4 flex items-center h-2 gap-1">
                <input type="checkbox" id="AcceptTerms" name="AcceptTerms" class="mt-0.5" />
                <span class="text-white font-inter text-sm">Akceptuję regulamin</span>
            </div>
        </div>

        <button
            class="w-[126px] h-[50px] font-inter font-semibold text-white rounded-xl text-sm bg-gradient-to-br
           to-[#5038ED] from-[#9181F4] hover:to-[#2E1BB7] hover:from-[#6A5ACD] hover:scale-105 transition-all ease-in-out duration-300">
            Zarejestruj się
        </button>
    </form>
</div>
